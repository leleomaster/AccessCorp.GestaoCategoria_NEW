
@model List<AccessCorp.GestaoCategoria.Model.CategoriaViewModel>

    @{
        ViewBag.Title = "Index - Gestão de Categoria";
    }

    <h2>Olá, seja bem vindo ao Gestão de Categorias.</h2>

    <h4>Clique em uma Categoria para exibir as SubCategorias da Categoria.</h4>

    <h3>Lista de Categoria.</h3>

    @if (Model != null && Model.Count > 0)
    {
        <table class="table table-striped table-bordered">
            <tr>
                <th>
                    @Html.Label("Nome da Categoria")
                </th>
                <th>
                    @Html.Label("Descricao da Categoria")
                </th>
                <th>
                    @Html.Label("Slug da Categoria")
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descricao)
                    </td>
                    <td>
                        @Html.ActionLink(item.Slug, "SubCategoria", "Formulario", new { id = item.Id }, null)
                    </td>
                </tr>
            }
        </table>
    }
    else
    {
        <p>Nenhum resultado foi encontrado</p>
    }